[sqlfluff]
dialect = duckdb
templater = dbt
runaway_limit = 10
max_line_length = 80
indent_unit = space

# Ignorar pastas que não são código SQL puro ou que são geradas automaticamente
exclude_rules = L031, L034
ignore = parsing, templating

[sqlfluff:indentation]
tab_space_size = 4

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = leading

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:aliasing.table]
aliasing = explicit

[sqlfluff:rules:ambiguous.column_references]
group_by_and_order_by_style = implicit

# --- CONFIGURAÇÃO DO DBT ---
[sqlfluff:templater:dbt]
project_dir = olist_analytics
profiles_dir = olist_analytics
profile = olist_analytics
target = dev